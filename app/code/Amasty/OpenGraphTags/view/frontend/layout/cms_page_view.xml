    <head>
        <attribute name="prefix" value="og: http://ogp.me/ns# cms: http://ogp.me/ns/cms#" />
    </head>
    <body>
        <referenceContainer name="head.additional">
            <block name="amopengraphtags.cms" class="Magento\Framework\View\Element\Template"
                   template="Amasty_OpenGraphTags::cms/og_markup.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">Amasty\OpenGraphTags\ViewModel\CmsOgMarkup</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
