<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!--DATA-->
    <preference for="Mirasvit\LayeredNavigation\Api\Data\AttributeConfigInterface" type="Mirasvit\LayeredNavigation\Model\AttributeConfig"/>

    <!--Entity Manager-->
    <type name="Magento\Framework\EntityManager\MetadataPool">
        <arguments>
            <argument name="metadata" xsi:type="array">
                <item name="Mirasvit\LayeredNavigation\Api\Data\AttributeConfigInterface" xsi:type="array">
                    <item name="entityTableName" xsi:type="const">Mirasvit\LayeredNavigation\Api\Data\AttributeConfigInterface::TABLE_NAME</item>
                    <item name="identifierField" xsi:type="const">Mirasvit\LayeredNavigation\Api\Data\AttributeConfigInterface::ID</item>
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\EntityManager\HydratorPool">
        <arguments>
            <argument name="hydrators" xsi:type="array">
                <item name="Mirasvit\LayeredNavigation\Api\Data\AttributeConfigInterface" xsi:type="string">Magento\Framework\EntityManager\AbstractModelHydrator</item>
            </argument>
        </arguments>
    </type>

    <!-- fix incorrect items count in navigation for Elasticsearch -->
    <type name="Magento\CatalogSearch\Model\Indexer\Fulltext\Action\DataProvider">
        <plugin name="m-layerednavigation-elasticsearch-fix-item-count"
                type="Mirasvit\LayeredNavigation\Plugin\ElasticsearchIndexerPlugin"/>
    </type>

    <!-- Search Product List Brand Logo  -->
    <virtualType name="Magento\CatalogSearch\Block\SearchResult\ListProduct"
                 type="Magento\Catalog\Block\Product\ListProduct">
        <arguments>
            <argument name="catalogLayer" xsi:type="object">Magento\Catalog\Model\Layer\Search</argument>
        </arguments>
    </virtualType>

    <!-- Add data mapper for Elastic Search Engine to index Additional Filters data -->
    <type name="Mirasvit\Search\Index\Magento\Catalog\Product\Index">
        <arguments>
            <argument name="dataMappers" xsi:type="array">
                <item name="engine-elastic-additional-on_sale" xsi:type="object">Mirasvit\LayeredNavigation\Index\Mirasvit\LayeredNavigation\OnSaleDataMapper</item>
                <item name="engine-elastic-additional-stock" xsi:type="object">Mirasvit\LayeredNavigation\Index\Mirasvit\LayeredNavigation\StockDataMapper</item>
                <item name="engine-elastic-additional-new_products" xsi:type="object">Mirasvit\LayeredNavigation\Index\Mirasvit\LayeredNavigation\NewProductsDataMapper</item>
                <item name="engine-elastic-additional-rating" xsi:type="object">Mirasvit\LayeredNavigation\Index\Mirasvit\LayeredNavigation\RatingDataMapper</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Elasticsearch\Model\Adapter\Elasticsearch">
        <plugin name="m-layerednavigation-elasticsearch-index-additional-filters"
                type="Mirasvit\LayeredNavigation\Plugin\ElasticsearchFilterIndexerPlugin"/>
    </type>

    <type name="Magento\CatalogGraphQl\Model\Resolver\Products\Query\Search">
        <plugin name="m-layerednavigation-graphql-get-results" type="Mirasvit\LayeredNavigation\Plugin\GraphQlSearchPlugin"/>
    </type>

    <type name="Mirasvit\Core\Api\Service\ValidationServiceInterface">
        <arguments>
            <argument name="validators" xsi:type="array">
                <item name="layeredNavigation" xsi:type="object">Mirasvit\LayeredNavigation\Service\ValidationService</item>
            </argument>
        </arguments>
    </type>
</config>
